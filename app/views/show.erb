<p></p>
<a href="/" class="btn-warning btn-sm">Back to Home</a> | <a href="/robots" class="btn-info btn-sm" >Robot Directory</a> | <a href="/robots/<%= @robot.id %>/edit" class="btn-success btn-sm">Edit this Robot</a>
<p></p>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="text-center" >
        <h1><%= @robot.name %></h1>
        <img src="http://robohash.org/<%= @robot.avatar %>">

      </div>
    </div>
    <div class="col-md-6">
      <div class="text-center" >
        <h2>From:</h2>
        <p><%= @robot.city %>,<%= @robot.state %> </p>
        <h2>Birthday:</h2>
        <p><%= @robot.birthdate %></p>
        <h2>Hire Date:</h2>
        <p><%= @robot.date_hired %></p>
        <h2>Division:</h2>
        <p><%= @robot.department %></p>
        <p></p>
        <form action="/robots/<%= @robot.id %>" method="POST">
          <input type="hidden" name="_method" value="delete">
          <input role="button"class="btn btn-danger btn-xl" type="submit" value="Delete this Robot Forever!"/>
        </form>
      </div>
    </div>
  </div>
</div>
</div>
